<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<!--
  Scene 的根节点需要给定所使用的 XML 命名空间，并需要在使用 Controller 时给出 Controller 类
-->
<GridPane fx:controller="com.hearthintellect.crawler.CardCrawlerViewController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10" vgap="10">
  <stylesheets>
    <URL value="@CardCrawlerView.css" />
  </stylesheets>
  <!-- 设定内边距 -->
  <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

  <!-- 设定子节点 -->
  <Text fx:id="cardTitle"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="4"/>

  <Label text="Type:"
         GridPane.columnIndex="0" GridPane.rowIndex="1"/>

  <Text fx:id="cardType"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <Label text="Cost:"
         GridPane.columnIndex="0" GridPane.rowIndex="2"/>

  <Text fx:id="cardCost"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>

  <Label text="Attack:"
         GridPane.columnIndex="0" GridPane.rowIndex="3"/>

  <Text fx:id="cardAttack"
        GridPane.columnIndex="1" GridPane.rowIndex="3"/>

  <Label text="Health:"
         GridPane.columnIndex="0" GridPane.rowIndex="4"/>

  <Text fx:id="cardHealth"
        GridPane.columnIndex="1" GridPane.rowIndex="4"/>

  <Label text="Effect:"
         GridPane.columnIndex="0" GridPane.rowIndex="5"/>

  <Text fx:id="cardEffect"
        GridPane.columnIndex="1" GridPane.rowIndex="5"/>

  <HBox GridPane.columnIndex="1" GridPane.rowIndex="6"
        GridPane.columnSpan="4">
    <Button text="Previous" fx:id="previousBtn"
            onAction="#previousCard"/>
    <Button text="Next" fx:id="nextBtn"
            onAction="#nextCard"/>
  </HBox>

  <ImageView fx:id="cardImage"
             GridPane.columnIndex="2" GridPane.rowIndex="0"
             GridPane.columnSpan="2" GridPane.rowSpan="7"/>
</GridPane>